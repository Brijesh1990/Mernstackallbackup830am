<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('./partials/navigation') %>
    
    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-check-circle"></i> Book Approvals</h1>
        </div>

        <% if(success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if(error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="table-container">
            <% if(data && data.length > 0) { %>
                <div style="color: #666; margin-bottom: 20px; padding: 15px; background: #f8f9fa; border-radius: 5px;">
                    <strong>Total Pending Approvals: <%= data.length %></strong>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Student Name</th>
                            <th>Book Name</th>
                            <th>Assignment Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(assignment => { %>
                            <tr>
                                <td><%= assignment.id %></td>
                                <td><strong><%= assignment.student_name %></strong></td>
                                <td><%= assignment.book_name %></td>
                                <td><%= new Date(assignment.assignment_date).toLocaleDateString() %></td>
                                <td>
                                    <a href="/approve-assignment/<%= assignment.id %>" class="btn btn-sm btn-success" title="Approve">
                                        <i class="fas fa-check"></i> Approve
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-check-circle"></i>
                    <p>No pending approvals. All assignments are approved!</p>
                </div>
            <% } %>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
