<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('./partials/navigation') %>
    
    <div class="container">
        <div class="form-container" style="max-width: 600px; margin: 40px auto;">
            <h1><i class="fas fa-exchange-alt"></i> Assign Book to Student</h1>

            <% if(error && error.length > 0) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                </div>
            <% } %>

            <form action="/assign-book" method="POST" class="form">
                <div class="form-group">
                    <label for="student_id">Select Student</label>
                    <select id="student_id" name="student_id" required>
                        <option value="">-- Choose a Student --</option>
                        <% if(students && students.length > 0) { %>
                            <% students.forEach(student => { %>
                                <option value="<%= student.id %>"><%= student.student_name %> (<%= student.student_id %>)</option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="book_id">Select Book</label>
                    <select id="book_id" name="book_id" required>
                        <option value="">-- Choose a Book --</option>
                        <% if(books && books.length > 0) { %>
                            <% books.forEach(book => { %>
                                <option value="<%= book.id %>"><%= book.book_name %> by <%= book.author || 'Unknown' %> (Available: <%= book.available_quantity %>)</option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="assignment_date">Assignment Date</label>
                    <input type="date" id="assignment_date" name="assignment_date" required>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Assign Book</button>
                    <a href="/assignments" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
