<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('./partials/navigation') %>
    
    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-graduation-cap"></i> Students Management</h1>
            <a href="/add-student" class="btn btn-primary"><i class="fas fa-plus"></i> Add Student</a>
        </div>

        <% if(success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if(error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="table-container">
            <div class="search-box">
                <form action="/search-students" method="POST" class="search-form">
                    <input type="text" name="search" placeholder="Search by name, ID, or email..." required>
                    <button type="submit"><i class="fas fa-search"></i> Search</button>
                </form>
            </div>

            <% if(data && data.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Student Name</th>
                            <th>Student ID</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(student => { %>
                            <tr>
                                <td><%= student.id %></td>
                                <td><%= student.student_name %></td>
                                <td><span class="badge"><%= student.student_id %></span></td>
                                <td><%= student.email || '-' %></td>
                                <td><%= student.phone || '-' %></td>
                                <td>
                                    <a href="/edit-student/<%= student.id %>" class="btn btn-sm btn-info" title="Edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a href="/delete-student/<%= student.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')" title="Delete">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-inbox"></i>
                    <p>No students found. <a href="/add-student">Add a new student</a></p>
                </div>
            <% } %>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
