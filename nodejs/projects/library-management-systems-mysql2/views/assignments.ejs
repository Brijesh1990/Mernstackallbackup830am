<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('./partials/navigation') %>
    
    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-exchange-alt"></i> Book Assignments</h1>
            <a href="/assign-book" class="btn btn-primary"><i class="fas fa-plus"></i> Assign Book</a>
        </div>

        <% if(success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if(error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="table-container">
            <% if(data && data.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Student Name</th>
                            <th>Book Name</th>
                            <th>Assignment Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(assignment => { %>
                            <tr>
                                <td><%= assignment.id %></td>
                                <td><strong><%= assignment.student_name %></strong></td>
                                <td><%= assignment.book_name %></td>
                                <td><%= new Date(assignment.assignment_date).toLocaleDateString() %></td>
                                <td>
                                    <% if(assignment.approved) { %>
                                        <span class="badge" style="background-color: #28a745;">✓ Approved</span>
                                    <% } else { %>
                                        <span class="badge" style="background-color: #ffc107;">⧖ Pending</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/delete-assignment/<%= assignment.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')" title="Delete">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-inbox"></i>
                    <p>No assignments yet. <a href="/assign-book">Create an assignment</a></p>
                </div>
            <% } %>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
